{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es2017"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "jsx": "react",
        "importHelpers": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "declaration": false,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "./dist",
        "paths": {
            "*": [
                "./src/*"
            ]
        },
        "typeRoots": [
            "typings/**/*.d.ts",
            "node_modules/@types"
        ],
        "plugins": [
            {
                "transform": "typescript-is/lib/transform-inline/transformer"
            }
        ]
    },
    "include": [
        "src",
        "typings/**/*.d.ts",
        "./node_modules/@types"
    ],
    "exclude": [
        "**/*.js",
        "./dist/**/*"
    ]
}
